@model Finances.WebUI.Flat.Models.Expense.CreateExpenseModel

<h2>Create flat expense</h2>

<div class="container">
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Name" class="col-md-1"></label>
            <div class="col-md-11">
                <input asp-for="Name" class="form-control" placeholder="Enter expense name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Cost" class="col-md-1"></label>
            <div class="col-md-11">
                <input asp-for="Cost" class="form-control" placeholder="Enter cost" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Tags" class="col-md-1"></label>
            <div class="col-md-11">
                <select asp-for="Tags" multiple data-role="tagsinput" class="form-control" placeholder="Enter tag"></select>
            </div>
        </div>
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Send new flat expense request</button>
        </div>
    </form>
</div>

